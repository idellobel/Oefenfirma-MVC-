
@model Ivo.Oefenfirma.Web.ViewModels.AuthentificationLoginVm
@{
    ViewBag.Title = "Login";
}
<hr/>
<hr/>
<p>
    @Html.ActionLink(" ", "Index", "Home", new { Area = "" }, new { @class = "btn btn-success glyphicon glyphicon-home", title = "Startpagina" })
</p>

<hr/>
<h2>Login</h2>
<h3>Om verder te gaan dient u eerst in te loggen.</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();

    <div class="form-group">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(e => e.UserName, new { @class = "control-label col-md-2" })
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
    </div>
    <p>
        @Html.LabelFor(e => e.Password, new { @class = "control-label col-md-2" })
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" }) 
    </p>
    <div>
        @Html.LabelFor(e => e.RememberMe, new { @class = "control-label col-md-2"})
        @Html.CheckBoxFor(e => e.RememberMe , new { @class = "checkbox"} )
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Log in" class="btn btn-success" />
        </div>
    </div>
    <br/>
    <h3>Als u nog niet beschikt over een geldig account kunt u zich eerst registreren.</h3>

    <p>
        @Html.ActionLink(" Registreer u !", "Register", "Account", new { Area = "" }, new { @class = "btn btn-info glyphicon glyphicon-registration-mark",
        title = "Registreer" })
    </p>
    <br />
    <br />
