@using System.Web.UI.WebControls
@model DataDisplayVm


<div class="row text-center">
    <div class="col-lg-12">
        <h2 class="bg-success populair">HTML Tabellen </h2>
    </div>
</div>



<div class="container">
    <div class="table-responsive ">
        <table id="EntityProducten" class="table table-condensed  table-bordered table-striped ">
            <thead>
                <tr>
                    <td colspan="4" class="text-center">
                        <h3>Entiteit Categorieën</h3>
                    </td>

                </tr>
           
            <tr>
                <th>ID</th>
                <th>Categorienaam</th>
                <th>ParentId</th>
                <th>Hoofdcategorie</th>


            </tr>
            </thead>
            @foreach (var item in Model.Categories)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(ModelItem => item.Categorienaam)
                    </td>
                    <td>
                        @Html.DisplayFor(ModelItem => item.ParentId)
                    </td>
                    <td>
                        @Html.DisplayFor(ModelItem => item.Parent.Categorienaam)
                    </td>

                </tr>
            }

        </table>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
