                <tr>
                    <td colspan="5" class="text-center">
                        <h3>Entiteit Categorieên</h3>
                    </td>

                </tr>

                <tr>
                    <th>Artikelnummer</th>
                    <th>Artikelnaam</th>
                    <th>Artikelomschrijving</th>
                    <th>Prijs</th>
                    <th>Afbeelding</th>
                </tr>
            </thead>
            @foreach (var item in Model.Products)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Artikelnummer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Artikelnaam)
                    </td>
                    <td>
                        @Truncate(item.Artikelomschrijving, 10)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prijs)
                    </td>
                    <td>
                        @*@Html.DisplayFor(ModelItem => item.FiguurURL)*@
                        <img src="@Url.Content("~/Content/images/"+ item.Artikelnummer  +".jpg")" />
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

