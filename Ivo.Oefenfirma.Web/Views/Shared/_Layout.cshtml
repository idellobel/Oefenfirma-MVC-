<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <meta name="keywords" lang="nl" content="ivobytes, producten, prijs, ivo, brugge" />
    <meta name="author" content="Ivan Dellobel" />
    <meta name="description" content="Website IVOBytes">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
 
    <link rel="icon" href="~/Content/images/Ivobytes.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="~/Content/images/Ivobytes.ico" type="image/x-icon" />

    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />
    <link href="~/Content/mystyle.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
   
    @*@Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")*@
</head>
<body class="background">
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
              
            <a href="@Url.Action("Index","Home", new { @class = "navbar-brand" })">
                <img src="@Url.Content("~/Content/images/Ivobytes.jpg")" height="50" alt="Logo" title=" Logo"></a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li >
                    @Html.ActionLink("Producten", "Index", "Winkel" )
                    @*<a class="dropdown-item color" href="#">  | Componenten |</a>
                            <a class="dropdown-item color" href="#">Laptop en Pc | </a>
                            <a class="dropdown-item color" href="#">Netwerk | </a>
                            <a class="dropdown-item color" href="#">Printen/Scannen |</a>
                            <a class="dropdown-item color" href="#">Randapparatuur | </a>
                            <a class="dropdown-item color" href="#">Servers |</a>
                            <a class="dropdown-item color" href="#">Software  |</a>*@
                   
                </li>

                    
                <li>@Html.ActionLink("Contact","Contact","Home")</li>
                <li>@Html.ActionLink("Mandje", "Index", "Mandje")</li>
                
               
                
                    
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink("Login", "Login", "Account")</li>
                <li>@Html.ActionLink("ADMIN","Index","Home", new { Area = "Admin" }, new { })</li>
                <li>
                    @if (this.User.Identity.IsAuthenticated)
                    {

                        @*<dialog>Welkom, @User.Identity.Name</dialog>*@
                        @Html.ActionLink("Afmelden", "Logout", new {Controller = "Account"})

                    }
                    else
                    {
                        @Html.ActionLink("Aanmelden", "Login", new {Controller = "Account"})
                    }
                </li>

            </ul>

        </div>
    </div>
</div>
    
    @if (TempData["SuccessMessage"] != null)
            {
        <div class="alert alert-success">
            @*<h3 class="alert-heading">Geslaagd!</h3>*@
            <h4>
                @Html.Raw(TempData["SuccessMessage"])
            </h4>
        </div>
    }
    <div></div>
    
    @*@if (this.User.Identity.IsAuthenticated)
    {
        <div class="navbar-right">
            Welkom, @User.Identity.Name
            [@Html.ActionLink("Afmelden", "Logout", new { Controller = "Account" })]
        </div>
    }
    else
    {
        <div class="navbar-right">@Html.ActionLink("Aanmelden", "Login", new { Controller = "Account" })</div>
    }*@
    

<div class="container body-content">
    @RenderBody()
    <hr />
    <footer class="container-fluid text-center">
        <div class="col-sm-12">
            <ol class="breadcrumb">
                <li>&copy; @DateTime.Now.Year -  IVOBytes</li>
