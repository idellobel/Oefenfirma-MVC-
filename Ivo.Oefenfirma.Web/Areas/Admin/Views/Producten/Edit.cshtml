@model  Ivo.OefenfirmaCMS.lib.Entities.Product

@{
    ViewBag.Title = "Wijzig Product";
}

<h2>Wijzig product</h2>


@using (Html.BeginForm("Edit", "Producten", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Artikelnummer)
       
        <div class="form-group">
            @Html.LabelFor(model => model.Artikelnummer,  new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.Artikelnummer, new { @class = "form-control"  })
                @Html.ValidationMessageFor(model => model.Artikelnaam, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Artikelnaam,  new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.Artikelnaam,  new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Artikelnaam, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Artikelomschrijving, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
            @Html.TextAreaFor(model => model.Artikelomschrijving,  new
             {
           @class="form-control",
           rows ="7",
           style = "width:500px;border: 1px solid #8A8575; "
              })
           @Html.ValidationMessageFor(model => model.Artikelomschrijving, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Prijs,  new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.Prijs, new  { @class = "form-control" })
                @*@Html.ValidationMessageFor(model => model.Prijs, "", new { @class = "text-danger" })*@
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Spotlight, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.Spotlight, new { @class = "form-control " })

                @Html.ValidationMessageFor(model => model.Spotlight, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FiguurURL,  new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.TextAreaFor(model => model.FiguurURL, new
           {
               @class = "form-control" ,
               rows ="2",
               style = "width:500px;border: 1px solid #8A8575;"
           })
                @Html.ValidationMessageFor(model => model.FiguurURL, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Photo", new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                <input type="file" id="file" name="file" />
          
                @Html.ValidationMessageFor(model => model.FiguurURL, "", new { @class = "text-danger" })
            </div>
        </div>

  

        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
                <input type="submit" value="Bewaar" class="btn btn-danger" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Terug naar productenlijst", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
