@model IEnumerable<Ivo.OefenfirmaCMS.lib.Entities.Categorie>

@{
    ViewBag.Title = "Index";
}

<h2>Beheer Categorie </h2>

<p>
    @Html.ActionLink("Voeg nieuwe categorie toe", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Categorienaam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Parent.Children)
        </th>
        <th>BEWERKEN</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Categorienaam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Parent.Categorienaam)
        </td>
        <td>
            @Html.ActionLink("Wijzig", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Verwijder", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
